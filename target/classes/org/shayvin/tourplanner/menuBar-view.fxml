<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<MenuBar xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.shayvin.tourplanner.view.MenuBarView"
            AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="17.0"
            fx:id="menuBar">

        <Menu mnemonicParsing="false" text="File">
            <MenuItem id="fileExit" mnemonicParsing="false" onAction="#exitProgram" text="Exit"/>
            <MenuItem mnemonicParsing="false" text="Export to PDF" onAction="#exportPdf"/>
        </Menu>
        <Menu mnemonicParsing="false" text="Edit">
            <MenuItem mnemonicParsing="false" text="Delete"/>
        </Menu>
        <Menu mnemonicParsing="false" text="Font">
            <MenuItem mnemonicParsing="false" text="Arial" onAction="#fontArial"/>
            <MenuItem mnemonicParsing="false" text="Verdana" onAction="#fontVerdana"/>
            <MenuItem mnemonicParsing="false" text="Courier New" onAction="#fontCourierNew"/>
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
            <MenuItem mnemonicParsing="false" text="About"/>
        </Menu>

</MenuBar>
